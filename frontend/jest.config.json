{
  "testMatch": [
    "<rootDir>/../tests/frontend/**/*.test.js"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/src/setupTests.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/index.js",
    "!src/reportWebVitals.js"
  ],
  "coverageDirectory": "../tests/frontend/coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ]
}
